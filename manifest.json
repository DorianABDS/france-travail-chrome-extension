{
  "manifest_version": 3,
  "name": "Extension France Travail réinscription automatique",
  "version": "1.0",
  "description": "Ajoute un bouton de réinscription automatique sur la page, avec confirmation après actualisation.",
  "icons": {
    "128": "icons/franceTravail.webp"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.francetravail.fr/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.francetravail.fr/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "128": "icons/franceTravail.webp"
    }
  }
}
